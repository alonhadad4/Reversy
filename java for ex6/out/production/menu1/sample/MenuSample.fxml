<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<GridPane fx:controller="sample.MenuController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Text text="Welcome"
          GridPane.rowIndex="0" GridPane.columnIndex="1"
          GridPane.columnSpan="2"/>

    <HBox GridPane.rowIndex="1" GridPane.columnIndex="1">
        <Button text="Start Game" onAction="#startGame"/>
    </HBox>

    <HBox GridPane.rowIndex="2" GridPane.columnIndex="1">
        <Button text="Settings" onAction="#editSettings"/>
    </HBox>

    <HBox GridPane.rowIndex="3" GridPane.columnIndex="1">
        <Button text="Quit" onAction="#quitGame"/>
    </HBox>
    <Text fx:id="messageText"
          GridPane.rowIndex="6" GridPane.columnIndex="0"/>

</GridPane>